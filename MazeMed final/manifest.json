{
    "manifest_version": 2,
    "name": "MazeMed",
    "version": "0.1",

    "icons": {
        "128": "icon/icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],

            "js": ["content.js"]
        }
    ],

    "background": {
        "page": "popup.html"
    },

    "browser_action": {
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html",
        "default_title": "Select a word and lookup its definition using MazeMed"
    }
}